apiVersion: kubevirt.io/v1alpha1
kind: VirtualMachine
metadata:
  name: {{ vmname }}
  namespace: {{ namespace }}
spec:
  terminationGracePeriodSeconds: 0
  domain:
    resources:
      requests:
        memory: {{ vmmemory }}M
    devices:
      disks:
      - name: registrydisk
        volumeName: registryvolume
        disk:
          dev: vda
      - name: cloudinitdisk
        volumeName: cloudinitvolume
        disk:
          dev: vdb
  volumes:
    - name: registryvolume
      registryDisk:
        image: kubevirt/{{ vmdiskimage }}-registry-disk-demo:latest
